<model xmlns="http://modello.codehaus.org/MODELLO/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.1.0 http://modello.codehaus.org/xsd/modello-1.1.0.xsd"
       xml.namespace="http://sonatype.org/gshell-commands/1.0.0"
       xml.schemaLocation="http://sonatype.org/xsd/gshell-commands-1.0.0.xsd">

    <id>commands</id>
    <name>Commands</name>
    <version>1.0.0</version>

    <defaults>
        <default>
            <key>package</key>
            <value>org.sonatype.gshell.command.descriptor</value>
        </default>
    </defaults>

    <versionDefinition>
        <type>field</type>
        <value>version</value>
    </versionDefinition>

    <classes>
        <class rootElement="true" xml.tagName="commands" xsd.compositor="sequence">
            <name>CommandsDescriptor</name>
            <version>1.0.0+</version>
            <fields>
                <field xml.attribute="true">
                    <name>version</name>
                    <version>1.0.0+</version>
                    <required>true</required>
                    <type>String</type>
                </field>

                <field>
                    <name>commandSets</name>
                    <version>1.0.0+</version>
                    <association java.adder="false" java.bidi="false" xml.tagName="command-set" xml.itemsStyle="flat">
                        <type>CommandSetDescriptor</type>
                        <multiplicity>*</multiplicity>
                    </association>
                </field>
            </fields>
        </class>

        <class xml.tagName="command-set" xsd.compositor="sequence">
            <name>CommandSetDescriptor</name>
            <version>1.0.0+</version>
            <interfaces>
                <interface><![CDATA[Comparable<CommandSetDescriptor>]]></interface>
            </interfaces>
            <fields>
                <field xml.attribute="true">
                    <name>id</name>
                    <version>1.0.0+</version>
                    <required>true</required>
                    <type>String</type>
                </field>

                <field>
                    <name>enabled</name>
                    <version>1.0.0+</version>
                    <type>boolean</type>
                    <defaultValue>true</defaultValue>
                </field>

                <field>
                    <name>autoRegisterPriority</name>
                    <version>1.0.0+</version>
                    <required>true</required>
                    <type>int</type>
                </field>

                <!-- TODO: Add modules, so we can have custom Guice bits included if needed. -->
                
                <field>
                    <name>commands</name>
                    <version>1.0.0+</version>
                    <required>true</required>
                    <association java.adder="false" java.bidi="false" xml.itemsStyle="flat">
                        <type>CommandDescriptor</type>
                        <multiplicity>*</multiplicity>
                    </association>
                </field>
            </fields>

            <codeSegments>
                <codeSegment>
                    <version>1.0.0+</version>
                    <code><![CDATA[
                        public int compareTo(final CommandSetDescriptor target) {
                            int us = getAutoRegisterPriority();
                            int them = target.getAutoRegisterPriority();
                            return (us < them ? -1 : (us == them ? 0 : 1));
                        }
                    ]]></code>
                </codeSegment>
            </codeSegments>
        </class>

        <class xml.tagName="command">
            <name>CommandDescriptor</name>
            <version>1.0.0+</version>
            <fields>
                <field>
                    <name>action</name>
                    <version>1.0.0+</version>
                    <required>true</required>
                    <type>String</type>
                </field>

                <field>
                    <name>enabled</name>
                    <version>1.0.0+</version>
                    <type>boolean</type>
                    <defaultValue>true</defaultValue>
                </field>

                <field>
                    <name>name</name>
                    <version>1.0.0+</version>
                    <type>String</type>
                </field>
            </fields>
        </class>
    </classes>

</model>